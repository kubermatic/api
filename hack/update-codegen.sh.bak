set -euo pipefail

cd $(dirname $0)/..
source hack/lib.sh

CRD_DIR=crd
CODEGEN_DIR=pkg/generated

echodate "Removing old generated clients"
rm -rf "$CODEGEN_DIR"

echodate "Creating vendor directory"
go mod vendor

echodate "Generating Kubernetes clientset"

echo "" > /tmp/headerfile

# install generators
bash vendor/k8s.io/code-generator/generate-groups.sh nothingplease none none none
GOBIN="$(go env GOBIN)"
gobin="${GOBIN:-$(go env GOPATH)/bin}"

echo "gobin: '$gobin'"

exit 0

"$gobin/client-gen" \
  --clientset-name versioned \
  --input-base \
  --input k8c.io/api/v3/pkg/apis/ce/kubermatic/v1,k8c.io/api/v3/pkg/apis/ce/apps.kubermatic/v1 \
  --output-package k8c.io/api/v3/pkg/generated/clientset \
  --go-header-file /tmp/headerfile

"$gobin/lister-gen" \
  --input-dirs k8c.io/api/v3/pkg/apis/ce/kubermatic/v1,k8c.io/api/v3/pkg/apis/ce/apps.kubermatic/v1 \
  --output-package k8c.io/api/v3/pkg/generated/listers \
  --go-header-file /tmp/headerfile

"$gobin/informer-gen" \
  --input-dirs k8c.io/api/v3/pkg/apis/ee/kubermatic/v1,k8c.io/api/v3/pkg/apis/ee/ee.kubermatic/v1 \
  --versioned-clientset-package k8c.io/api/v3/pkg/generated/clientset/versioned \
  --listers-package k8c.io/api/v3/pkg/generated/listers \
  --output-package k8c.io/api/v3/pkg/generated/informers \
  --go-header-file /tmp/headerfile

# no deepcopy here, as controller-gen takes care of that
bash vendor/k8s.io/code-generator/generate-groups.sh client,lister,informer \
  k8c.io/api/v3/$CODEGEN_DIR \
  k8c.io/api/v3/pkg/apis/ce \
  "kubermatic:v1 apps.kubermatic:v1" \
  --go-header-file /tmp/headerfile

bash vendor/k8s.io/code-generator/generate-groups.sh client,lister,informer \
  k8c.io/api/v3/$CODEGEN_DIR \
  k8c.io/api/v3/pkg/apis/ee \
  "kubermatic:v1 ee.kubermatic:v1" \
  --go-header-file /tmp/headerfile

# move generated code to the correct location; this should work regardless where
# this repository has been cloned to
mv $GOPATH/src/k8c.io/api/v3/pkg/generated pkg/

# in case the repository was cloned to the module path in $GOPATH, make sure to
# remove the leftover v3 directory
rm -rf v3

# cleanup
rm -rf vendor

# generate CRDs from the Go types
for edition in ce ee; do
  echodate "Generating $edition CRDs"

  editionCRDs="$CRD_DIR/$edition"

  rm -rf "$editionCRDs"
  mkdir -p "$editionCRDs"

  go run sigs.k8s.io/controller-tools/cmd/controller-gen \
    crd \
    "object:headerFile=./hack/boilerplate/$edition/boilerplate.go.txt" \
    "paths=./pkg/apis/$edition/..." \
    "output:crd:dir=$editionCRDs"

  # beautify CRDs just because we can
  for f in $editionCRDs/*.yaml; do
    yq --inplace --no-doc 'del(.metadata.creationTimestamp)' "$f"
    mv "$f" "$f.bak"
    echo -e "# This file has been generated by hack/update-codegen.sh, DO NOT EDIT.\n" > "$f"
    cat "$f.bak" >> "$f"
    rm "$f.bak"
  done
done
